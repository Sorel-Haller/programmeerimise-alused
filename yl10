nimi = (input("Mis on sinu nimi? "))
print ("Tere, " + nimi + "!")


elukoht = (input("Mis on sinu elukoht? "))

if elukoht.lower() == "Saaremaa" or elukoht.lower() == "saaremaa":
    print("Saaremaa on 체ks koht")
else: print("...")


vanus = int(input("Mis on sinu vanus? : "))
if vanus <= 17 :
    print("Oled liiga noor, et autot juhtida!")
if vanus == 18:
    print ("Palju 천nne t채isealiseks saamise puhul!")
if vanus > 18:
    print("V천id autot juhtida!")